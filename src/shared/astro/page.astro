---
const components: Record<string, any> = {};
const componentImports = import.meta.glob("../../components/**/*.{jsx,tsx,astro}", {
  eager: true,
});

Object.entries(componentImports).forEach(([path, mod]: [string, any]) => {
  // Normalize path: strip leading ../../components/ and .jsx extension
  let rel = path.replace("../../components/", "").replace(/\.(jsx|tsx|astro)$/, "");
  const parts = rel.split("/");
  // If last two segments duplicate (e.g. feature/feature, hero/hero) drop the final
  if (parts.length > 1 && parts[parts.length - 1] === parts[parts.length - 2]) {
    parts.pop();
  }
  rel = parts.join("/");
  components[rel] = mod.default;
});

const { contentBlocks } = Astro.props;
---

<main id="main-content" tabindex="-1" data-editable="array" data-prop="contentBlocks" data-id-key="_name">
  {
    contentBlocks.map((block: any) => {
      const key = block._name;
      const Component = components[key];
      if (!Component) {
        console.warn(`Unknown component for block key '${key}'`, block);
        return null;
      }
      return (
        <div data-editable="array-item" data-id={block._name}>
          <Component {...block} />
        </div>
      );
    })
  }
</main>
